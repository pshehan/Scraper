<div class="container">
<div class="col-md-12">
    {{#if article}} {{#each article}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>{{this.title}}</h4>
        </div>
        <div class="panel-body">
            <a href={{this.link}} target="_blank">{{this.link}}</a>
            <br>
            <br>
            <button type="button" class="btn btn-danger save" data-id={{this._id}}>Save Article</button>
        </div>
    </div>
    {{/each}} {{else}}
    <div class="panel panel-default">
        <div class="panel-body">
            <h4>No new articles.</h4>
        </div>
    </div>
    {{/if}}
</div>
</div>