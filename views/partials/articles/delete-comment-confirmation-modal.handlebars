{{!-- You've deleted comment --}}
<div class="modal" tabindex="-1" role="dialog" id="confirm-delete-comment-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-white">
        <p>To delete this comment, click <b>Delete</b>.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="delete-comment-confirm-button">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancel-delete-comment-button">Cancel</button>
      </div>
    </div>
  </div>
</div>