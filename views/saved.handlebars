
<div class="container">
    <h1>Saved Articles</h1>
            <a href="/">Home</a>

    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                        <br><br>
                        <button type="button" class="btn btn-success addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                            <a href="home"><button class="btn btn-primary ml-4 mt-3 btn-lg">Home</button></a>

                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>There are no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}